<section class="hero">
  <div class="hero-body">
    <div class="container">
      <div class="column is-half is-offset-one-quarter">
        <h1 class="title">
          {{heading}}
        </h1>
        <form action="/login" method="post">
          <div class="control">
            <label class="label">Email</label>
            <p class="control">
              <input class="input form-control" type="text" placeholder="Text input" name="email">
            </p>
          </div>
          <div class="control">
            <label class="label">Password</label>
            <p class="control">
              <input class="input form-control" type="password" placeholder="Text input" name="password">
            </p>
          </div>
          <div class="control">
            <p class="control">
              <button class="button is-primary center-align" type="submit" value="submit">Submit</button>
            </p>
          </div>
        </form>
      <div>
    </div>
  </div>
</section>
